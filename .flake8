[flake8]
# flake8 configuration for MLOps project

# Maximum line length (PEP 8 recommends 79, we use 100 for readability)
max-line-length = 100

# Exclude directories
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    cdk.out

# Ignore specific error codes
ignore =
    E203,
    E402,
    E501,
    W503,
    W504

# Show source code for errors
show-source = True

# Show statistics
statistics = True

# Count errors
count = True
